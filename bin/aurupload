#!/bin/bash
source "$(dirname $0)/../share/app-init"

if [ ! -e PKGBUILD ]; then
	errmsg "this script must be run with a directory containing a PKGBUILD"
	exit 1
fi

if [ -e AUR ]; then
	category=$(cat AUR)
elif [ ! -z $1 ]; then
	category="$1"
else
	errmsg "this script needs a category for upload"
	exit 1
fi

msg "upload the source to AUR"
mkaurball
burp -c $category $(ls -1 *.src.tar.gz)
rm -rf *.src.tar.gz src/
msg "done"
