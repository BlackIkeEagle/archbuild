#!/bin/bash
source "$(dirname $0)/../share/app-init"

[ "$1" = "" ] && exit 1
if [ -d ${rpdir}/${1} ]; then
	msg "removing logfiles found in ${rpdir}/${1}"
	find ${rpdir}/${1}/*/ -maxdepth 1 \( -name "*.log" -o -name "*.log.*" \) -delete
	find ${rpdir}/${1}/*/ -maxdepth 1 -name "*logpipe*" -delete
else
	errmsg "given directory ${1} not found in ${rpdir}"
fi
